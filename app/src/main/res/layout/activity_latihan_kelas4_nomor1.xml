<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0CED9"
    tools:context=".latihan_soal.latihan_soal_kelas4.LatihanKelas4Nomor1">

    <TextView
        android:id="@+id/soal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:text="@string/ada_1_buah_pizza_yang_dipotong_menjadi_8_bagian_lalu_doni_mengambil_3_potong_pecahan_untuk_menyatakan_bagian_pizza_yang_doni_ambil_dari_seluruh_potongan_pizza_adalah"
        android:textAlignment="center"
        android:textColor="#EA2A2A"
        android:textSize="18sp"
        android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pilihanA"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/_1_n_n8"
        android:textColor="#EA2A2A"
        android:textSize="18sp"
        android:fontFamily="monospace"
        app:backgroundTint="#f7d4c8"
        app:layout_constraintEnd_toStartOf="@+id/pilihanB"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soal" />

    <Button
        android:id="@+id/pilihanB"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="@string/_1_n_n3"
        android:textColor="#EA2A2A"
        android:textSize="18sp"
        android:fontFamily="monospace"
        app:backgroundTint="#f7d4c8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soal" />

    <Button
        android:id="@+id/pilihanC"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/_8_n_n3"
        android:textColor="#EA2A2A"
        android:textSize="18sp"
        android:fontFamily="monospace"
        app:backgroundTint="#f7d4c8"
        app:layout_constraintEnd_toStartOf="@+id/pilihanD"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pilihanA" />

    <Button
        android:id="@+id/pilihanD"
        android:layout_width="155dp"
        android:layout_height="93dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/_3_n_n8"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:textColor="#EA2A2A"
        app:backgroundTint="#f7d4c8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pilihanB" />

    <Button
        android:id="@+id/solusi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="@string/penyelesaian"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:textColor="#EA2A2A"
        app:backgroundTint="#f7d4c8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>